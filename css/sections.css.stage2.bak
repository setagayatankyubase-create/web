/* row layout */

.top-service-row {

    display: grid;

    grid-template-columns: 1.05fr 0.95fr;

    gap: clamp(20px, 4vw, 56px);

    align-items: center;

    margin-top: clamp(28px, 5vw, 72px);

}



.top-service-row.row--reverse {

    grid-template-columns: 0.95fr 1.05fr;

}



.top-service-row.row--reverse .top-service-row__media {

    order: 2;

}



.top-service-row.row--reverse .top-service-row__card {

    order: 1;

}



/* media */

.top-service-row__media {

    position: relative;

    z-index: 2;

}



.top-service-row__media img {

