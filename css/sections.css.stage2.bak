.problem {

    background: var(--bg-white);

    color: var(--black);

    padding: 120px 0; /* 邨ｱ荳縺輔ｌ縺滉ｸ贋ｸ倶ｽ咏區 */

    border-top: 1px solid rgba(0, 0, 0, 0.06);

    border-bottom: 1px solid rgba(0, 0, 0, 0.06);

    position: relative;

    overflow: hidden;

}



@media (max-width: 900px) {

    .problem {

        padding: 80px 0; /* SP縺ｧ縺ｯ蜷・0px */

    }

}



/* 閭梧勹逕ｨ縺ｮ陬・｣ｾ繝ｬ繧､繝､繝ｼ - 阮・￥繝ｻ蜿ｳ蛛ｴ蟇・○ */

.problem::before {

    content: "";

    position: absolute;

    top: -15%;

    right: -8%;

    width: 50%;

    height: 75%;

    background: rgba(255, 243, 200, 0.10);

    transform: skewY(-5deg) rotate(-3deg);

    z-index: 0;

    filter: blur(0.5px);

}



.problem::after {

    content: "";

    position: absolute;

    bottom: -10%;

    right: -5%;

    width: 48%;

    height: 70%;

    background: rgba(200, 235, 255, 0.08);

    transform: skewY(5deg) rotate(3deg);

    z-index: 0;

    filter: blur(0.5px);

}



.problem__inner {

    position: relative;

    z-index: 1;

    max-width: 1200px;

    margin: 0 auto;

    padding-inline: clamp(16px, 4vw, 56px);

}



/* 隕句・縺励ヶ繝ｭ繝・け・亥ｷｦ蟇・○繝ｻ讓ｪ蟷・ｒ邨槭ｋ・・*/

.problem__header {

    max-width: 600px;

    margin-bottom: clamp(40px, 6vw, 64px);

}



.problem__kicker {

    font-size: 12px;

    letter-spacing: 0.12em;

    font-weight: 500;

    color: #9AA0A6; /* 邨ｱ荳繧ｫ繝ｩ繝ｼ */

    margin-bottom: 12px;

    text-transform: uppercase;

    line-height: 1.2;

}



.problem__title-main {

    font-size: 40px;

    font-weight: 700;

    color: var(--black);

    line-height: 1.25;

    margin-top: 0;

    margin-bottom: 24px;

}



@media (max-width: 900px) {

    .problem__title-main {

        font-size: 28px;

    }

}



.problem__lead {

    font-size: clamp(15px, 1.6vw, 16px);

    line-height: 1.9;

    color: rgba(0, 0, 0, 0.7);

    margin: 0 0 clamp(14px, 1.8vw, 18px) 0;

}



.problem__message {

    font-size: clamp(13px, 1.4vw, 14px);

    color: rgba(0, 0, 0, 0.65);

    margin: 0;

    line-height: 1.8;

    font-weight: 400;

}



/* 繧ｫ繝ｼ繝峨げ繝ｪ繝・ラ */

.problem__cards {

    display: grid;

    grid-template-columns: repeat(3, minmax(0, 1fr));

    gap: clamp(24px, 3.5vw, 32px);

    position: relative;

    z-index: 2; /* 蛻・ｭ千ｷ壹ｈ繧贋ｸ翫↓陦ｨ遉ｺ */

}



/* 繧ｫ繝ｼ繝峨ョ繧ｶ繧､繝ｳ・育ｵｱ荳UI・・*/

.problem-card {

    border: var(--border-default);

    border-radius: 20px; /* 邨ｱ荳・・0px */

    padding: 32px; /* 邨ｱ荳・・2px */

    background: #ffffff;

    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06); /* 邨ｱ荳繧ｷ繝｣繝峨え */

    transition: transform var(--transition-fast), box-shadow var(--transition-fast), border-color var(--transition-fast);

    position: relative;

    z-index: 2; /* 蛻・ｭ千ｷ壹ｈ繧贋ｸ翫↓陦ｨ遉ｺ */

}



.problem-card:hover {

    transform: translateY(-4px);

    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.08); /* 邨ｱ荳hover繧ｷ繝｣繝峨え */

    border-color: var(--border-strong);

}



/* 逡ｪ蜿ｷ・域｡・・壼ｷｦ荳翫↓蟆上＆縺上∫ｴｰ縺・ｸ狗ｷ夲ｼ・*/

.problem-card__num {

    font-size: 14px;

    font-weight: 600;

    letter-spacing: 0.08em;

    color: #2f6bff;

    margin: 0 0 18px 0;

    padding-bottom: 10px;

    border-bottom: 1px solid rgba(47, 107, 255, 0.2);

    width: fit-content;

    display: block;

}



/* 繧ｿ繧､繝医Ν */

.problem-card__title {

    font-size: clamp(17px, 1.8vw, 20px);

    font-weight: 600;

    line-height: 1.5;

    color: var(--black);

    margin: 0 0 clamp(10px, 1.2vw, 14px) 0;

    letter-spacing: -0.01em;

}



/* 隱ｬ譏取枚 */

.problem-card__desc {

    font-size: clamp(14px, 1.5vw, 16px);

    line-height: 1.7;

    color: rgba(0, 0, 0, 0.65);

    margin: 0;

}



/* 繝ｬ繧ｹ繝昴Φ繧ｷ繝・*/

@media (max-width: 900px) {

    .problem__cards {

        grid-template-columns: repeat(2, 1fr);

        gap: clamp(20px, 3vw, 28px);

    }

}



@media (max-width: 600px) {

    .problem__cards {

        grid-template-columns: 1fr;

        gap: clamp(20px, 3vw, 24px);

    }

}




/* ===== TOP縺顔衍繧峨○繧ｻ繧ｯ繧ｷ繝ｧ繝ｳ・・EWS TOP・・ Netyear鬚ｨ ===== */

.news-top {

    position: relative;

    overflow: hidden;

    padding: clamp(56px, 7vw, 96px) 0;

    background: var(--bg-white);

}



/* 閭梧勹逕ｨ縺ｮ陬・｣ｾ繝ｬ繧､繝､繝ｼ - 蠑ｱ縺上・蜿ｳ螂･縺ｫ蟇・○繧・*/

.news-top::before {

    content: "";

    position: absolute;

    top: -10%;

    right: -8%;

    width: 50%;

    height: 70%;

    background: rgba(255, 230, 240, 0.08);

    transform: skewY(-6deg) rotate(-3deg);

    z-index: 0;

    filter: blur(0.5px);

}



.news-top::after {

    content: "";

    position: absolute;

    bottom: -10%;

    right: -5%;

    width: 48%;

    height: 65%;

    background: rgba(220, 240, 255, 0.10);

    transform: skewY(7deg) rotate(3deg);

    z-index: 0;

    filter: blur(0.5px);

}



.news-top__inner {

    position: relative;

    z-index: 2;

    max-width: 1200px;

    margin: 0 auto;

    padding-inline: clamp(16px, 4vw, 56px);

}



/* 隕句・縺励ヶ繝ｭ繝・け・亥ｷｦ蟇・○繝ｻ霆ｽ驥擾ｼ・*/

.news-top__header {

    margin-bottom: clamp(32px, 4vw, 48px);

}



.news-top__kicker {

    font-size: 12px;

    letter-spacing: 0.12em;

    font-weight: 500;

    color: #9AA0A6; /* 邨ｱ荳繧ｫ繝ｩ繝ｼ */

    margin-bottom: 12px;

    text-transform: uppercase;

    line-height: 1.2;

}



.news-top__title {

    font-size: 40px;

    font-weight: 700;

    color: var(--black);

    line-height: 1.25;

    margin-top: 0;

    margin-bottom: 24px;

}



@media (max-width: 900px) {

    .news-top__title {

        font-size: 28px;

    }

}



.news-top__lead {

    font-size: clamp(14px, 1.5vw, 15px);

    line-height: 1.8;

    color: rgba(0, 0, 0, 0.65);

    margin: 0;

}



/* 荳隕ｧ・医き繝ｼ繝牙喧縺励↑縺・・3蛻励げ繝ｪ繝・ラ・・*/

.news-top__list {

    list-style: none;

    margin: 0;

    padding: 0;

    position: relative;

    z-index: 2;

}



.news-top__item {

    display: grid;

    grid-template-columns: 120px 120px 1fr;

    gap: 14px;

    align-items: center;

    padding: clamp(18px, 2vw, 22px) 0;

    border-bottom: 1px solid #eaeaea;

    transition: background-color 0.18s ease;

}



.news-top__item:last-child {

    border-bottom: none;

}



.news-top__item:hover {

    background-color: #fafafa;

}



/* 譌･莉假ｼ井ｸ逡ｪ髱吶°縺ｫ・・*/

.news-top__date {

    font-size: 13px;

    color: #888;

    font-weight: 400;

    font-variant-numeric: tabular-nums;

    letter-spacing: 0.02em;

}



/* 繧ｫ繝・ざ繝ｪ・医Λ繝吶Ν諢溘・蜃ｺ縺輔↑縺・ｼ・*/

.news-top__category {

    font-size: 13px;

    letter-spacing: 0.06em;

    color: rgba(0, 0, 0, 0.6);

    font-weight: 400;

    text-transform: uppercase;

}



/* 繧ｿ繧､繝医Ν・井ｸｻ蠖ｹ・・*/

.news-top__title-link {

    font-size: clamp(15px, 1.6vw, 16px);

    font-weight: 500;

    line-height: 1.6;

    color: var(--black);

    text-decoration: none;

    transition: color 0.18s ease, text-decoration 0.18s ease;

}



.news-top__title-link:hover {

    color: rgba(0, 0, 0, 0.8);

    text-decoration: underline;

    text-underline-offset: 3px;

}



/* 繝輔ャ繧ｿ繝ｼ・医♀遏･繧峨○荳隕ｧ縺ｸ・・*/

.news-top__footer {

    margin-top: clamp(32px, 4vw, 48px);

    text-align: right;

}



.news-top__link {

    display: inline-flex;

    align-items: center;

    gap: 8px;

    font-size: clamp(14px, 1.5vw, 15px);

    color: rgba(0, 0, 0, 0.7);

    text-decoration: none;

    transition: color 0.18s ease;

}



.news-top__link-arrow {

    transition: transform 0.18s ease;

}



.news-top__link:hover {

    color: rgba(0, 0, 0, 0.9);

}



.news-top__link:hover .news-top__link-arrow {

    transform: translateX(4px);

}



/* 繝ｬ繧ｹ繝昴Φ繧ｷ繝・*/

@media (max-width: 900px) {

    .news-top__item {

        grid-template-columns: 1fr;

        gap: 8px;

        align-items: start;

        padding: clamp(16px, 2vw, 20px) 0;

    }

    

    .news-top__date,

    .news-top__category {

        display: inline-block;

    }

    

    .news-top__date {

        margin-right: 12px;

    }

    

    .news-top__footer {

        text-align: left;

    }

}



.section--dark {

    background: var(--black);

    color: #fff;

    padding: var(--section-dark) 0;

}





.section--dark p {

    color: rgba(255, 255, 255, 0.85);

    line-height: 2.2;

    font-size: 15px;

    font-weight: 400;

    margin-bottom: calc(var(--gap) * 0.75);

}



.section--dark p:last-child {

    margin-bottom: 0;

}



.section--dark .h2,

.section--dark-title {

    color: #fff;

    margin-bottom: calc(var(--gap) * 1.5);

}



.section--dark .h2::before,

.section--dark-title::before {

    background: var(--bg-white);

}



.section--dark-title {

    font-size: 24px;

    font-weight: 400;

    line-height: 1.4;

    position: relative;

    padding-left: 40px;

    letter-spacing: 0.04em;

}



.section--dark .eyebrow {

    color: rgba(255, 255, 255, 0.5);

}



.section--muted {

    background: #f6f7f8;

    padding: var(--section) 0;

}



/* 繧ｹ繝ｩ繝ｳ繝茨ｼ域万繧√き繝・ヨ・・*/

.slant-top {

    position: relative;

}



.slant-top::before {

    content: "";

    position: absolute;

    top: 0;

    left: 0;

    right: 0;

    height: 60px;

    background: white;

    clip-path: polygon(0 0, 100% 0, 100% 80%, 0 100%);

    z-index: 1;

    pointer-events: none;

}



.section--dark.slant-top::before {

    background: var(--black);

}



.slant-bottom {

    position: relative;

}



.slant-bottom::after {

    content: "";

    position: absolute;

    bottom: 0;

    left: 0;

    right: 0;

    height: 60px;

    background: white;

    clip-path: polygon(0 20%, 100% 0, 100% 100%, 0 100%);

    z-index: 1;

    pointer-events: none;

}



.section--dark.slant-bottom::after {

    background: var(--black);

}



.about-hero.slant-bottom::after {

    background: rgba(0, 0, 0, 0.4);

    z-index: 1;

}



.media-slope {

    clip-path: polygon(0 0, 100% 0, 100% 85%, 0 100%);

    overflow: hidden;

    position: relative;

}



.media-slope img {

    width: 100%;

    height: auto;

    display: block;

    transform: scale(1.05);

    transition: transform 0.3s var(--ease);

}



.media-slope:hover img {

    transform: scale(1.08);

}



/* 繧ｿ繧､繝晞嚴螻､ */

.eyebrow {

    font-size: 9px;

    font-weight: 400;

    color: var(--muted);

    letter-spacing: 0.2em;

    text-transform: uppercase;

    margin-bottom: 24px;

    display: block;

}



.h2 {

    font-size: 24px;

    font-weight: 400;

    color: var(--black);

    line-height: 1.2;

    position: relative;

    padding-left: 40px;

    letter-spacing: -0.01em;

    margin-bottom: calc(var(--gap) * 3);

    max-width: 600px;

}



.h2::before {

    content: "";

    position: absolute;

    left: 0;

    top: 10px;

    bottom: 10px;

    width: 1px;

    background: var(--accent);

}



.lead {

    font-size: 14px;

    line-height: 2.0;

    color: var(--text);

    max-width: 540px;

    margin-bottom: calc(var(--gap) * 2.5);

}




/* ========================================

   TOP繝壹・繧ｸ繝偵・繝ｭ繝ｼ・・ndex.html蟆ら畑・・   ======================================== */



.hero {

    min-height: clamp(var(--hero-min-height), 72vh, 760px);

    position: relative;

    overflow: hidden;

    background: white;

    margin-top: 0;

    padding: 0;

}



.hero__inner {

    display: grid;

    grid-template-columns: 1fr 1.05fr;

    gap: 0;

    align-items: stretch;

    max-width: 1440px;

    margin: 0 auto;

    min-height: clamp(calc(100vh - var(--header-total-h) - 40px), 70vh, 680px);

    padding: 0;

}



.hero__left {

    padding: clamp(40px, 4.5vw, 60px) clamp(32px, 4.5vw, 72px) clamp(36px, 4.5vw, 56px);

    display: flex;

    flex-direction: column;

    justify-content: flex-start;

    position: relative;

    background: transparent;

    max-width: 580px;

    padding-left: 60px; /* 邵ｦ邱壹→縺ｮ霍晞屬30px + 邵ｦ邱壼ｹ・px + 菴咏區29px */

    padding-top: clamp(16px, 2vw, 24px);

    overflow: hidden; /* 髱｢繝ｬ繧､繝､繝ｼ縺ｮ縺ｯ縺ｿ蜃ｺ縺励ｒ蛻ｶ蠕｡ */

}



/* ===== 繝偵・繝ｭ繝ｼ蟾ｦ蛛ｴ・夊埋縺・搨繝九Η繧｢繝ｳ繧ｹ縺ｮ遏ｩ蠖｢繝ｬ繧､繝､繝ｼ・域ュ蝣ｱ繧呈髪縺医ｋ閭梧勹・・===== */

/* ::before・唏1縺ｮ蟾ｦ遶ｯ繧医ｊ蟆代＠蟾ｦ縺九ｉ蟋九ａ繧玖埋縺・搨繝九Η繧｢繝ｳ繧ｹ縺ｮ遏ｩ蠖｢ */

.hero__left::before {

    content: "";

    position: absolute;

    top: clamp(28px, 3.5vw, 44px);

    left: 28px;

    right: clamp(28px, 3.5vw, 44px);

    bottom: clamp(28px, 3.5vw, 44px);

    background: rgba(47, 107, 255, 0.12);

    border-radius: 20px;

    border: 1px solid rgba(47, 107, 255, 0.22);

    pointer-events: none;

    z-index: -1;

    opacity: 1;

    box-shadow: 0 2px 12px rgba(47, 107, 255, 0.08);

}



/* ::after・壼ｰ代＠繧ｺ繝ｩ縺励◆2譫夂岼・亥･･陦後″繧定ｶｳ縺呻ｼ・*/

.hero__left::after {

    content: "";

    position: absolute;

    top: clamp(28px, 3.5vw, 44px);

    left: 28px;

    right: clamp(28px, 3.5vw, 44px);

    bottom: clamp(28px, 3.5vw, 44px);

    background: rgba(47, 107, 255, 0.06);

    border-radius: 18px;

    pointer-events: none;

    z-index: -2;

    opacity: 1;

    transform: translate(-6px, 6px);

}



/* 鬆伜沺繝ｩ繝吶Ν・・yebrow・・*/

.hero__eyebrow {

    font-size: 11px;

    letter-spacing: 0.24em;

    color: rgba(0, 0, 0, 0.5);

    margin: 0 0 12px 0;

    font-weight: 500;

    line-height: 1.3;

    text-transform: uppercase;

    position: relative;

    padding-left: 18px;

}



.hero__eyebrow::before {

    content: "";

    position: absolute;

    left: 0;

    top: 50%;

    transform: translateY(-50%);

    width: 2px;

    height: 14px;

    background: linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.35) 100%);

    border-radius: 1px;

}



.hero__chips {

    display: flex;

    gap: 8px;

    flex-wrap: wrap;

    margin: 0 0 18px 0;

    min-width: 0;

}



/* ===== 繝√ャ繝暦ｼ育樟蝨ｰ險ｪ蝠・/ 蜀咏悄繝ｻ譁・ｫ窶ｦ・峨・UI蛹・===== */

.hero .chip {

    font-size: 11px;

    letter-spacing: 0.1em;

    padding: 0 16px;

    height: 36px;

    display: inline-flex;

    align-items: center;

    justify-content: center;

    border-radius: var(--radius-pill);

    border: 1px solid rgba(47, 107, 255, 0.2);

    background: rgba(255, 255, 255, 0.8);

    color: rgba(0, 0, 0, 0.7);

    white-space: nowrap;

    transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;

    font-weight: 500;

}



/* hover譎ゑｼ壼ｷ･遞九・繝溘ル繝翫ン縺ｨ縺励※縺ｮ蟄伜惠諢溘ｒ蜃ｺ縺・*/

.hero .chip:hover {

    background: rgba(47, 107, 255, 0.1);

    border-color: rgba(47, 107, 255, 0.3);

    color: rgba(0, 0, 0, 0.8);

}



/* H1・・陦悟崋螳壹・逵区攸繧ｿ繧､繝晢ｼ・*/

.hero__title {

    font-size: clamp(36px, 4.2vw, 52px);

    line-height: 1.05;

    letter-spacing: -0.025em;

    margin: 0 0 24px 0;

    font-weight: 600;

    color: #0a0a0a;

    max-width: 13em;

    text-rendering: optimizeLegibility;

    -webkit-font-smoothing: antialiased;

    -moz-osx-font-smoothing: grayscale;

}



/* H1縺ｮ2繝悶Ο繝・け逶ｮ繧貞ｼｱ繧√ｋ */

.hero__title-line2 {

    font-weight: 400;

    color: #5a5a5a;

    font-size: 0.94em;

}



.hero__lead {

    max-width: 42ch;

    line-height: 1.85;

    color: rgba(0, 0, 0, 0.7);

    margin: 0 0 32px 0;

    font-size: 15px;

    font-weight: 400;

    letter-spacing: -0.01em;

}



.hero__cta {

    display: flex;

    gap: 12px;

    flex-wrap: wrap;

    margin: 0 0 16px 0;

}



/* 繝偵・繝ｭ繝ｼ蜀・・繝懊ち繝ｳ繧ｹ繧ｿ繧､繝ｫ */

.hero__cta .btn {

    display: inline-flex;

    align-items: center;

    justify-content: center;

    padding: 0 28px;

    font-size: 14px;

    letter-spacing: 0.05em;

    text-decoration: none;

    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);

    white-space: nowrap;

    font-weight: 500;

    position: relative;

}



/* Primary CTA・磯ｻ偵・繧ｿ繝ｻ荳ｻ蟆守ｷ夲ｼ・*/

.hero__cta .btn--primary {

    height: 52px;

    min-width: 200px;

    background: #0a0a0a;

    color: #fff;

    border: 1px solid #0a0a0a;

    border-radius: var(--radius-md);

    box-shadow: var(--shadow-md);

    transition: transform var(--transition-fast), box-shadow var(--transition-fast);

}



.hero__cta .btn--primary:hover {

    transform: translateY(-1px);

    box-shadow: var(--shadow-lg);

}



.hero__cta .btn--primary:focus-visible {

    outline: 2px solid var(--site-accent);

    outline-offset: 3px;

}



.hero__cta .btn--primary::before {

    content: "";

    position: absolute;

    inset: 0;

    border-radius: var(--radius-md);

    padding: 1px;

    background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 100%);

    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);

    -webkit-mask-composite: xor;

    mask-composite: exclude;

    opacity: 0;

    transition: opacity 0.25s ease;

}



.hero__cta .btn--primary:hover::before {

    opacity: 1;

}



/* Secondary CTA・域棧邱壹・蜑ｯ蟆守ｷ夲ｼ・*/

.hero__cta .btn--secondary {

    height: 52px;

    min-width: 200px;

    background: transparent;

    color: rgba(0, 0, 0, 0.7);

    border: var(--border-strong);

    border-radius: var(--radius-md);

    backdrop-filter: blur(4px);

    -webkit-backdrop-filter: blur(4px);

}



.hero__cta .btn--secondary:hover {

    border-color: rgba(0, 0, 0, 0.26);

    background: rgba(0, 0, 0, 0.025);

    transform: translateY(-1px);

    box-shadow: var(--shadow-sm);

}



.hero__cta .btn--secondary:focus-visible {

    outline: 2px solid var(--site-accent);

    outline-offset: 3px;

}



.hero__trust {

    display: flex;

    align-items: center;

    gap: 20px;

    font-size: 12px;

    color: rgba(0, 0, 0, 0.6);

    letter-spacing: 0.04em;

    font-weight: 500;

    margin-top: 0;

    line-height: 1.5;

}



.hero__trust span {

    position: relative;

    transition: color var(--transition-fast);

    white-space: nowrap;

}



.hero__trust span:hover {

    color: rgba(0, 0, 0, 0.75);

}



.hero__trust span:not(:last-child)::after {

    content: "";

    position: absolute;

    right: -12px;

    top: 50%;

    transform: translateY(-50%);

    width: 1px;

    height: 12px;

    background: rgba(0, 0, 0, 0.2);

}



.hero__right {

    position: relative;

    background: var(--bg-white);

    overflow: hidden;

}



.hero__media {

    height: 100%;

    width: 100%;

    position: relative;

    overflow: hidden;

}



.hero__media img {

    width: 100%;

    height: 100%;

    object-fit: cover;

    filter: saturate(0.82) contrast(1.05) brightness(0.96);

    transform: scale(1.02);

    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);

}



/* 蟾ｦ遶ｯ縺九ｉ逋ｽ縺ｸ貅ｶ縺代ｋ繧ｰ繝ｩ繝・・繧ｷ繝ｧ繝ｳ */

.hero__media::before {

    content: "";

    position: absolute;

    left: 0;

    top: 0;

    bottom: 0;

    width: 48%;

    background: linear-gradient(90deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.85) 25%, rgba(255, 255, 255, 0) 50%);

    pointer-events: none;

    z-index: 2;

}



/* 阮・＞證怜ｹ包ｼ・verlay・会ｼ壼承逕ｻ蜒上ｒ閭梧勹邏譚舌↓關ｽ縺ｨ縺・*/

.hero__media::after {

    content: "";

    position: absolute;

    inset: 0;

    background: 

        linear-gradient(90deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0) 48%, rgba(255, 255, 255, 0.3) 70%, rgba(255, 255, 255, 0.5) 100%),

        linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.06) 50%, rgba(0, 0, 0, 0.12) 100%);

    pointer-events: none;

    z-index: 1;

}



/* 繝・く繧ｹ繝医せ繝ｩ繧､繝繝ｼ・医・繝ｭ諢溘・貍泌・・・*/

.hero__slider {

    position: absolute;

    bottom: 18%;

    left: 0;

    right: 0;

    width: 100%;

    overflow: hidden;

    pointer-events: none;

    z-index: 3;

    /* 蟾ｦ縺ｮ繝・く繧ｹ繝医お繝ｪ繧｢縺ｫ縺ｯ陲ｫ縺帙↑縺・*/

    padding-left: 48%;

    position: relative;

    mask-image: linear-gradient(to right, transparent 0%, black 60px, black calc(100% - 60px), transparent 100%);

    -webkit-mask-image: linear-gradient(to right, transparent 0%, black 60px, black calc(100% - 60px), transparent 100%);

}



/* 繧ｹ繝ｩ繧､繝繝ｼ縺ｮ蟾ｦ蜿ｳ繝輔ぉ繝ｼ繝・*/

.hero__slider::before {

    content: "";

    position: absolute;

    left: 0;

    top: 0;

    bottom: 0;

    width: 60px;

    background: linear-gradient(90deg, rgba(0, 0, 0, 0.4) 0%, transparent 100%);

    pointer-events: none;

    z-index: 1;

}



.hero__slider::after {

    content: "";

    position: absolute;

    right: 0;

    top: 0;

    bottom: 0;

    width: 60px;

    background: linear-gradient(270deg, rgba(0, 0, 0, 0.4) 0%, transparent 100%);

    pointer-events: none;

    z-index: 1;

}



.hero__slider-track {

    display: inline-flex;

    align-items: center;

    white-space: nowrap;

    animation: heroSlider 32s linear infinite;

    will-change: transform;

}



.hero__slider-item {

    font-size: 16px;

    font-weight: 500;

    letter-spacing: 0.2em;

    color: rgba(255, 255, 255, 0.7);

    text-transform: uppercase;

    margin: 0;

    line-height: 1;

    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);

}



.hero__slider-separator {

    font-size: 16px;

    color: rgba(255, 255, 255, 0.5);

    margin: 0 32px;

    letter-spacing: 0;

    line-height: 1;

}



@keyframes heroSlider {

    0% {

        transform: translateX(0);

    }

    100% {

        transform: translateX(-50%);

    }

}



/* 譁懊ａ蠅・阜・亥ｷｦ遶ｯ縺ｮ逋ｽ縺・擇・・*/

.hero__right::before {

    content: "";

    position: absolute;

    left: -120px;

    top: 0;

    bottom: 0;

    width: 220px;

    background: linear-gradient(90deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.96) 100%);

    transform: skewX(-7deg);

    transform-origin: left top;

    pointer-events: none;

    z-index: 3;

    backdrop-filter: blur(2px);

    -webkit-backdrop-filter: blur(2px);

}



.hero__scroll {

    position: absolute;

    right: 28px;

    top: 50%;

    transform: translateY(-50%) rotate(90deg);

    font-size: 10px;

    letter-spacing: 0.3em;

    color: rgba(255, 255, 255, 0.35);

    text-transform: uppercase;

    font-weight: 500;

    z-index: 4;

    pointer-events: none;

    animation: scrollFloat 2.5s ease-in-out infinite;

    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);

}



.hero__scroll::before {

    content: "";

    position: absolute;

    left: -60px;

    top: 50%;

    width: 44px;

    height: 1px;

    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.2) 50%, transparent 100%);

    transform: translateY(-50%);

    animation: scrollLine 2.5s ease-in-out infinite;

}



@keyframes scrollFloat {

    0%, 100% {

        transform: translateY(-50%) rotate(90deg);

        opacity: 0.3;

    }

    50% {

        transform: translateY(calc(-50% + 6px)) rotate(90deg);

        opacity: 0.5;

    }

}



@keyframes scrollLine {

    0%, 100% {

        transform: translateY(-50%);

        opacity: 0.2;

        width: 40px;

    }

    50% {

        transform: translateY(calc(-50% + 6px));

        opacity: 0.4;

        width: 48px;

    }

}



/* ===== 蛻晏屓繝ｭ繝ｼ繝画ｼ泌・・九せ繧ｯ繝ｭ繝ｼ繝ｫ蜃ｺ迴ｾ繧｢繝九Γ繝ｼ繧ｷ繝ｧ繝ｳ ===== */



/* 繝ｪ繝・Η繝ｼ繧ｹ繝｢繝ｼ繧ｷ繝ｧ繝ｳ蟇ｾ蠢・*/

@media (prefers-reduced-motion: reduce) {

    [data-anim],

    [data-anim] * {

        animation: none !important;

        transition: none !important;

        opacity: 1 !important;

        transform: none !important;

    }

}



/* 繝偵・繝ｭ繝ｼ繧｢繝九Γ繝ｼ繧ｷ繝ｧ繝ｳ・亥・蝗槭Ο繝ｼ繝臥畑・・*/

/* 蛻晄悄迥ｶ諷具ｼ夐撼陦ｨ遉ｺ・・tml隕∫ｴ縺ｮ縺ｿ縺ｧ蛻ｶ蠕｡・・*/

html.is-preload [data-anim="hero"] {

    opacity: 0;

    transform: translateY(16px);

}



/* 逕ｻ蜒上□縺壮cale繧りｿｽ蜉 */

html.is-preload [data-anim="hero"][data-delay="3"],

html.is-preload [data-anim="hero"][data-delay="3"] img {

    transform: translateY(16px) scale(1.03);

}



/* 繧｢繝九Γ繝ｼ繧ｷ繝ｧ繝ｳ螳溯｡梧凾・夊｡ｨ遉ｺ */

html.is-ready [data-anim="hero"] {

    opacity: 1;

    transform: translateY(0);

    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);

}



html.is-ready [data-anim="hero"][data-delay="3"],

html.is-ready [data-anim="hero"][data-delay="3"] img {

    transform: translateY(0) scale(1);

    transition: opacity 0.65s cubic-bezier(0.16, 1, 0.3, 1), transform 0.65s cubic-bezier(0.16, 1, 0.3, 1);

}



/* 驕・ｻｶ縺ｮ谿ｵ髫惹ｻ倥￠ */

html.is-ready [data-anim="hero"][data-delay="0"] {

    transition-delay: 0ms;

}



html.is-ready [data-anim="hero"][data-delay="1"] {

    transition-delay: 150ms;

}



html.is-ready [data-anim="hero"][data-delay="2"] {

    transition-delay: 300ms;

}



html.is-ready [data-anim="hero"][data-delay="3"] {

    transition-delay: 450ms;

}



/* 繧ｹ繧ｯ繝ｭ繝ｼ繝ｫ蜃ｺ迴ｾ繧｢繝九Γ繝ｼ繧ｷ繝ｧ繝ｳ・・eveal逕ｨ・・*/

/* 蛻晄悄迥ｶ諷具ｼ夐撼陦ｨ遉ｺ */

[data-anim="reveal"] {

    opacity: 0;

    transform: translateY(16px);

    transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);

}



/* 繧｢繝九Γ繝ｼ繧ｷ繝ｧ繝ｳ螳溯｡梧凾・夊｡ｨ遉ｺ */

[data-anim="reveal"].reveal--in {

    opacity: 1;

    transform: translateY(0);

}



.text-link {

    color: var(--accent);

    text-decoration: underline;

    font-size: 14px;

    font-weight: 400;

    transition: opacity 0.3s var(--ease), text-decoration 0.3s var(--ease);

}



.text-link:hover {

    text-decoration: none;

    opacity: 0.7;

}



/* 繧ｵ繝ｼ繝薙せ讎りｦ・- GIG蝙・*/


.service-overview {

    position: relative;

    overflow: hidden;

    padding: var(--section) 0;

}



/* 閭梧勹逕ｨ縺ｮ陬・｣ｾ繝ｬ繧､繝､繝ｼ - 阮・＞譁懊ａ繝励Ξ繝ｼ繝・*/

.service-overview::before {

    content: "";

    position: absolute;

    top: -8%;

    right: -10%;

    width: 60vw;

    height: 420px;

    background: rgba(0, 0, 0, 0.04);

    border-radius: 28px;

    transform: rotate(-8deg);

    z-index: 0;

}



/* 閭梧勹縺ｫ阮・＞繝ｩ繧､繝ｳ陬・｣ｾ繧定ｿｽ蜉 */

.service-overview::after {

    content: "";

    position: absolute;

    bottom: 12%;

    left: -5%;

    width: 50vw;

    height: 1px;

    background: repeating-linear-gradient(

        90deg,

        rgba(0, 0, 0, 0.05) 0px,

        rgba(0, 0, 0, 0.05) 8px,

        transparent 8px,

        transparent 16px

    );

    transform: rotate(4deg);

    z-index: 0;

}



.service-grid {

    display: grid;

    grid-template-columns: 1fr 1fr;

    gap: 80px;

    align-items: start;

}



.service-intro-col {

    position: sticky;

    top: 120px;

}



.service-intro {

    font-size: 14px;

    line-height: 2.0;

    color: var(--text);

    margin-top: calc(var(--gap) * 2);

}



.service-items-col {

    display: flex;

    flex-direction: column;

    gap: calc(var(--gap) * 3);

}



.service-card {

    display: flex;

    flex-direction: column;

    gap: calc(var(--gap) * 1.5);

}



.service-card-image {

    width: 100%;

    overflow: hidden;

}



.service-card-image img {

    width: 100%;

    height: auto;

    display: block;

    transform: scale(1.05);

    transition: transform 0.3s var(--ease);

}



.service-card:hover .service-card-image img {

    transform: scale(1.08);

}



.service-card-content {

    position: relative;

}



.service-card-category {

    font-size: 12px;

    color: var(--muted);

    letter-spacing: 0.05em;

    display: block;

    margin-bottom: 8px;

}



.service-card-title {

    font-size: 20px;

    font-weight: 400;

    color: var(--black);

    letter-spacing: 0.03em;

    line-height: 1.4;

    margin-bottom: calc(var(--gap) * 1.5);

}



.service-card-desc {

    font-size: 14px;

    line-height: 2.0;

    color: var(--text);

    margin-bottom: calc(var(--gap) * 1.5);

}



.service-card-arrow {

    position: absolute;

    bottom: 0;

    right: 0;

    font-size: 18px;

    color: var(--muted);

    transition: transform 0.3s var(--ease), color 0.3s var(--ease);

}



.service-card:hover .service-card-arrow {

    transform: translateX(4px);

    color: var(--accent);

}



h3,

.flow-title,

.strengths-title {

    font-size: 17px;

    font-weight: 400;

    color: var(--black);

    margin-bottom: calc(var(--gap) * 2);

    letter-spacing: -0.01em;

    line-height: 1.25;

    max-width: 500px;

}




/* ===== TOP Services (Netyear-ish) ===== */

.top-services--netyear {

    position: relative;

    overflow: hidden;

    padding: clamp(56px, 8vw, 120px) 0;

    background: var(--bg-white);

}



.top-services--netyear .top-services__inner {

    max-width: 1200px;

