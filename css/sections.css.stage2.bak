}



.top-services--netyear .top-services__head {

    margin-bottom: clamp(28px, 5vw, 64px);

}



.top-services--netyear .top-services__kicker {

    font-size: 12px;

    letter-spacing: 0.12em;

    font-weight: 500;

    color: #9AA0A6; /* 邨ｱ荳繧ｫ繝ｩ繝ｼ */

