    padding-right: 12px;

}



.news-row:last-child {

    border-bottom: none;

}



.news-row__date {

    font-size: 13px;

    letter-spacing: 0.05em;

    color: rgba(0, 0, 0, 0.6);

    font-weight: 400;

    font-variant-numeric: tabular-nums;

}



.news-row__tag {

    font-size: 12px;

    letter-spacing: 0.12em;

    opacity: 0.75;

    color: var(--text);

    text-transform: uppercase;

    font-weight: 500;

}



.news-row__title {

    font-size: clamp(15px, 1.6vw, 16px);

    line-height: 1.7;

    color: var(--black);

    text-decoration: none;

    display: inline-flex;

    align-items: center;

    gap: 10px;

    transition: text-decoration 0.18s ease;

}



.news-row__title::after {

    content: "竊・;

    opacity: 0.55;

    transition: transform 0.18s ease, opacity 0.18s ease;

    font-size: 14px;

}



/* hover・・etyear鬚ｨ縺ｫ荳雁刀縺ｫ・・*/

.news-row:hover {

    background: rgba(255, 255, 255, 0.55);

}



.news-row:hover .news-row__title {

    text-decoration: underline;

    text-underline-offset: 4px;

}



.news-row:hover .news-row__title::after {

    transform: translateX(6px);

    opacity: 0.85;

}



/* 繝ｬ繧ｹ繝昴Φ繧ｷ繝・*/

@media (max-width: 900px) {

    .news-list-page--netyear .news-list-page__inner {

        grid-template-columns: 1fr;

        gap: clamp(32px, 6vw, 56px);

    }

    

    .news-row {

        grid-template-columns: 1fr;

        gap: 8px;

        align-items: start;

        padding: 16px 12px;

    }

    

    .news-row__date,

    .news-row__tag {

        display: inline-block;

    }

    

    .news-row__date {

        margin-right: 12px;

    }

    

    .news-row__title {

        margin-top: 6px;

        grid-column: 1 / -1;

    }

    

    .news-list-page--netyear::before,

    .news-list-page--netyear::after {

        opacity: 0.18;

    }

}



/* ===== 繧ｳ繝ｩ繝荳隕ｧ繝壹・繧ｸ・・OLUMN LIST・・===== */

.column-list-page {

    position: relative;

    overflow: hidden;

    padding: clamp(56px, 8vw, 96px) 0;

    background: var(--bg-white);

}



/* 閭梧勹逕ｨ縺ｮ陬・｣ｾ繝ｬ繧､繝､繝ｼ */

.column-list-page::before {

    content: "";

    position: absolute;

    top: -15%;

    right: -8%;

    width: 50%;

    height: 75%;

    background: rgba(255, 243, 200, 0.10);

    transform: skewY(-6deg) rotate(-3deg);

    z-index: 0;

    filter: blur(0.5px);

    pointer-events: none;

}



.column-list-page::after {

    content: "";

    position: absolute;

    bottom: -10%;

    right: -5%;

    width: 48%;

    height: 70%;

    background: rgba(200, 235, 255, 0.08);

    transform: skewY(5deg) rotate(3deg);

    z-index: 0;

    filter: blur(0.5px);

    pointer-events: none;

}



.column-list-page .container {

    position: relative;

    z-index: 1;

}




/* ===== COLUMN繧ｫ繝・ざ繝ｪ繝輔ぅ繝ｫ繧ｿ繝ｼ ===== */

.column-category-filter {

    display: flex;

    align-items: center;

    gap: 12px;

    margin-bottom: 48px;

    padding-bottom: 24px;

    border-bottom: 1px solid rgba(0, 0, 0, 0.08);

    flex-wrap: wrap;

}



.category-filter-btn {

    padding: 8px 20px;

    border: 1px solid rgba(0, 0, 0, 0.15);

    background: transparent;

    color: rgba(0, 0, 0, 0.65);

    font-size: 13px;

    letter-spacing: 0.05em;

    border-radius: 20px;

    cursor: pointer;

    transition: all 0.2s ease;

    font-weight: 400;

    font-family: inherit;

}



.category-filter-btn:hover {

    border-color: rgba(0, 0, 0, 0.25);

    background: rgba(0, 0, 0, 0.02);

    color: rgba(0, 0, 0, 0.8);

}



.category-filter-btn.is-active {

    background: var(--black);

    border-color: var(--black);

    color: #fff;

}



.category-filter-btn.is-active:hover {

    background: rgba(11, 11, 11, 0.9);

    border-color: rgba(11, 11, 11, 0.9);

}



/* ===== COLUMN繧ｰ繝ｪ繝・ラ・・蛻怜崋螳夲ｼ・===== */

.column-list-page__grid {

    display: grid;

    grid-template-columns: repeat(3, 1fr);

    gap: 32px;

    margin-top: 0;

    max-width: 1200px;

}



.column-list-page__card.is-hidden {

    display: none;

}



/* ===== COLUMN繧ｫ繝ｼ繝・- 螳梧・蠎ｦ蜷台ｸ・===== */

.column-list-page__card {

    padding: 0;

    background: var(--bg-white);

    border: var(--border-default);

    border-radius: var(--radius-md);

    transition: all var(--transition-fast);

    text-decoration: none;

    color: inherit;

    display: flex;

    flex-direction: column;

    overflow: hidden;

    box-shadow: var(--shadow-sm);

    position: relative;

    z-index: 2;

}



/* hover・壹き繝ｼ繝峨・蟆代＠豬ｮ縺・*/

.column-list-page__card:hover {

    transform: translateY(-4px);

    box-shadow: var(--shadow-lg);

    border-color: var(--border-strong);

}



/* 逕ｻ蜒擾ｼ壽ｯ皮紫蝗ｺ螳夲ｼ・6:9・会ｼ玖ｧ剃ｸｸ繧偵き繝ｼ繝峨→謠・∴繧・*/

.column-list-page__media {

    width: 100%;

    aspect-ratio: 16 / 9;

    overflow: hidden;

    margin: 0;

    position: relative;

    border-radius: 14px 14px 0 0;

}



.column-list-page__media img {

    width: 100%;

    height: 100%;

