/* number (01/02/03) */

.top-service-row__num {

    position: absolute;

    top: 18px;

    right: 18px;

    font-size: 12px;

    letter-spacing: 0.12em;

    opacity: 0.45;

    color: rgba(0, 0, 0, 0.5);

